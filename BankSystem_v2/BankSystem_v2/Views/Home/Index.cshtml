@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h1>Bank System v2</h1>
                <p class="lead">Improving our system day by day.</p>
                @if (!User.IsInRole("Admin") && !User.IsInRole("User"))
                {
                    <p class="lead">To use the system, please log in with Email and Password, if is it your first time, please register into system.</p>
                }
            </div>
            <div class="col-md-6">
                <img src="~/Content/Images/bank.jpg" style="width:500px; height:300px; max-width:100%; border-radius:.5em" />
            </div>
        </div>
    </div>
    <div class="row" style="text-align:center">
    @if (User.IsInRole("Admin") || User.IsInRole("User"))
    {
        <div class="col-md-4">
            <h2>My Settings</h2>
            <p>
                Change your personal Data and Password.
            </p>
            <img src="~/Content/Images/settings.png" style="width:200px; height:200px; max-width:100%;border-radius:.5em " />
            &nbsp;&nbsp;<br /><br />
            @Html.ActionLink("My Settings", "MySettings", "Users", new { }, new { @class = "btn btn-primary" })

        </div>
    }
        <div class="col-md-4">
            <h2>Currency Converter</h2>
            <p>Convert some currencies.</p>
            <img src="~/Content/Images/currency.png" style="width:200px; height:200px; max-width:100%; border-radius:.5em" />
            &nbsp;&nbsp;<br /><br />
            @Html.ActionLink("Currency Converter", "CurrencyConverter", "Home", new { }, new { @class = "btn btn-primary" })
        </div>
        <div class="col-md-4">
            <h2>Privacy policy</h2>
            <p>Check the  privacy policy of our bank</p>
            <img src="~/Content/Images/privacyy.png" style="width:200px; height:200px; max-width:100%; border-radius:.5em" />
            &nbsp;&nbsp; <br /><br />
            @Html.ActionLink("Privacy Policy", "Privacy", "Home", new { }, new { @class = "btn btn-primary" })
        </div>
    @if (!User.IsInRole("Admin") && !User.IsInRole("User"))
    {
        <div class="col-md-4">
            <h2>Strategy</h2>
            <p>Check our strategy</p>
            <img src="~/Content/Images/strategy.png" style="width:200px; height:200px; max-width:100%; border-radius:.5em" />
            &nbsp;&nbsp; <br /><br />
            @Html.ActionLink("Strategy", "Strategy", "Home", new { }, new { @class = "btn btn-primary" })
        </div>
    }
    </div>
   